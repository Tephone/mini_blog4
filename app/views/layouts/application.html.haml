!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MiniBlog4
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'application'
    = javascript_pack_tag 'application'

  %body.bg-light
    .nav.nav-tabs.justify-content-center.bg-white
      = link_to '全体タイムライン', blogs_path, class: 'nav-link'
        
      - if user_signed_in?
        = link_to 'ユーザー一覧', users_path, class: 'nav-link'
        = link_to 'マイページ', user_path(current_user), class: 'nav-link'
        = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link'
      - else
        = link_to 'サインアップ', new_user_registration_path, class: 'nav-link'
        = link_to 'サインイン', new_user_session_path, class: 'nav-link'

    .d-flex.justify-content-center
      = notice
      = yield
