%br
.text-center.shadow.p-3.mb-3.bg-white.rounded
  %h4 アカウント登録画面
  %br
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .form-group
      = f.label :name
      %br/
      = f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', placeholder: 'name'
    .form-group
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'example@gmail.com'
    .form-group
      = f.label :password
      - if @minimum_password_length
        %em= t('devise.shared.minimum_password_length', count: @minimum_password_length)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'form-control'
    .form-group
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
    %br
    .actions
      = f.submit t('.sign_up'), class: 'btn btn-primary'
  = render "devise/shared/links"
